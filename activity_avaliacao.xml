<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#5CB1F3"
    tools:context="com.example.usurio.myapplication.MainActivity">

    <Button
        android:id="@+id/bt_enviar_av"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:text="Enviar Avaliação"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="438dp" />

    <TextView
        android:id="@+id/tv_nota"
        android:layout_width="333dp"
        android:layout_height="27dp"
        android:text="Dê a sua nota!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/tv_sugestao"
        android:layout_width="333dp"
        android:layout_height="25dp"
        android:text="Dê a sua sugestão!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/tv_experiencia"
        android:layout_width="212dp"
        android:layout_height="65dp"
        android:text="Conte-nos a sua experiência!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="28dp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="26dp" />

    <ImageView
        android:id="@+id/iv_eventos"
        android:layout_width="83dp"
        android:layout_height="83dp"
        app:srcCompat="@drawable/coexistirlogo"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="16dp" />

    <RatingBar
        android:id="@+id/rb_avaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="143dp" />

    <EditText
        android:id="@+id/et_sugestao"
        android:layout_width="332dp"
        android:layout_height="214dp"
        android:ems="10"
        android:hint="Faça nesta caixa sua sugestão :)"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:textColor="#ffffff"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="225dp" />

</android.support.constraint.ConstraintLayout>
