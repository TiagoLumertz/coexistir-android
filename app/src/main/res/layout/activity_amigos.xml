<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CB1F3"
    tools:context="com.example.usurio.myapplication.MainActivity">

    <TextView
        android:id="@+id/tv_amigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amigos"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/bt_add_amigos"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.452"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_add_amigos"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:elevation="0dp"
        android:text="Adicionar Amigos"
        android:textColor="#5CB1F3"
        android:layout_above="@+id/bt_rem_amigos"
        android:layout_alignStart="@+id/bt_rem_amigos"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <Button
        android:id="@+id/bt_rem_amigos"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:text="Remover Amigos"
        android:textColor="#5CB1F3"
        android:layout_above="@+id/bt_lst_amigos"
        android:layout_alignStart="@+id/bt_lst_amigos"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.706"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_not_amigos"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:text="Notificar Amigos"
        android:textColor="#5CB1F3"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bt_lst_amigos"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_lst_amigos"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:text="Ver Lista de Amigos"
        android:textColor="#5CB1F3"
        android:layout_above="@+id/bt_not_amigos"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_amigos"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/users"
        tools:ignore="ContentDescription"
        android:layout_above="@+id/tv_amigos"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165"
        android:layout_marginBottom="17dp" />

</android.support.constraint.ConstraintLayout>
