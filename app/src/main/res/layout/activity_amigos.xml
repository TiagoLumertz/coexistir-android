<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#5CB1F3"
    tools:context="com.example.usurio.myapplication.MainActivity">

    <TextView
        android:id="@+id/tv_amigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amigos"
        android:textColor="#ffffff"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="197dp" />

    <Button
        android:id="@+id/bt_add_amigos"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:elevation="0dp"
        android:text="Adicionar Amigos"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/bt_rem_amigos"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:text="Remover Amigos"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="333dp" />

    <Button
        android:id="@+id/bt_not_amigos"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:text="Notificar Amigos"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="380dp" />

    <Button
        android:id="@+id/bt_lst_amigos"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:text="Ver Lista de Amigos"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="427dp" />

    <ImageView
        android:id="@+id/iv_amigos"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/users"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="63dp" />

</android.support.constraint.ConstraintLayout>
