<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5CB1F3"
    tools:context="com.example.usurio.myapplication.MainActivity">

    <TextView
        android:id="@+id/tv_centros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centros Religiosos"
        android:textColor="#ffffff"
        android:textSize="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.452"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_add_centros"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:elevation="0dp"
        android:text="Adicionar Centro"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="352dp" />

	 <Button
        android:id="@+id/bt_alt_centros"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:text="Alterar Centro"
        android:textColor="#5CB1F3"
         tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintVertical_bias="0.72"
        tools:ignore="HardcodedText" />
		
    <Button
        android:id="@+id/bt_rem_centros"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:text="Remover Centro"
        android:textColor="#5CB1F3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_mapa_centros"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:text="Ver Mapa de Centros"
        android:textColor="#5CB1F3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/iv_centros"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/map"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184"
        tools:ignore="HardcodedText"/>

</android.support.constraint.ConstraintLayout>
