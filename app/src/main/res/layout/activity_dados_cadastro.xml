<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#5CB1F3"
    tools:context="com.example.usurio.myapplication.MainActivity">

    <TextView
        android:id="@+id/tv_cad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faça seu cadastro"
        android:textColor="#ffffff"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="16dp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/bt_conf_cad"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:text="Confirmar Cadastro"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteY="451dp"
        tools:layout_editor_absoluteX="97dp" />

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Nome"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="40dp" />

    <EditText
        android:id="@+id/et_apelido"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Apelido"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="80dp" />

    <Spinner
        android:id="@+id/sp_genero"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:text="Gênero"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="281dp" />

    <EditText
        android:id="@+id/et_data_nasc"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Data de Nascimento"
        android:inputType="date"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="160dp" />

    <EditText
        android:id="@+id/et_cidade"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Cidade"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="200dp" />

    <Spinner
        android:id="@+id/sp_uf"
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:text="UF"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="200dp" />

    <EditText
        android:id="@+id/et_rg"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="RG"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="number"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="240dp" />

    <Spinner
        android:id="@+id/sp_pos_relig"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:text="Posição Religiosa"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="120dp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="E-mail"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="321dp" />

    <EditText
        android:id="@+id/et_senha"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Senha"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="361dp" />

    <Spinner
        android:id="@+id/sp_red_soc"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:text="Redes Sociais"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="401dp" />

</android.support.constraint.ConstraintLayout>
