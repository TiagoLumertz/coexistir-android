<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#5CB1F3"
    tools:context="com.example.usurio.myapplication.MainActivity">

    <TextView
        android:id="@+id/tv_opcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Conteúdos"
        android:textColor="#ffffff"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="197dp" />

    <Button
        android:id="@+id/bt_alterar_cad"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:elevation="0dp"
        android:text="Alterar Conteúdo"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/bt_hist_edit"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:text="Ver Histórico de Alterações"
        android:textColor="#5CB1F3"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="333dp" />

    <ImageView
        android:id="@+id/iv_edit_cont"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/edit"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="63dp" />

</android.support.constraint.ConstraintLayout>
